<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appgame.prestador">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Prestador"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".presentation.menu.MenuActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.login.LoginActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".presentation.contacts.request_pending.AddContactActivity"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".utils.SessionExpiredActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Transparent"
            />

        <activity android:name=".presentation.contacts.pending.PendingContactActivity"
            android:screenOrientation="portrait"
            />

        <activity android:name=".presentation.contacts.detail.ContactDetailActivity"
            android:screenOrientation="portrait"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>