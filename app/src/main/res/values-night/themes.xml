<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Prestador" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/salmon</item>
        <item name="colorPrimaryVariant">@color/light_red</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorOnBackground">@color/background_night</item>
        <item name="colorTitleText">@color/white</item>
        <item name="colorSubtitleText">@color/salmon</item>
        <item name="colorPrincipalText">@color/white</item>
        <item name="colorPrincipalAlphaText">@color/white_alpha_80</item>
        <item name="colorDescriptionText">@color/white_description</item>

        <item name="colorGenericIcon">@color/white</item>
        <item name="colorDivider">@color/light_grey</item>
        <item name="colorBackgroundSecondary">@color/black_background_secondary</item>



        <item name="android:windowContentTransitions">true</item>


        <item name="sliderStyle">@style/Widget.App.Slider</item>
    </style>



    <style name="DialogTheme" parent="ThemeOverlay.AppCompat.ActionBar"/>

    <style name="DialogThemeAnim" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>
    </style>

    <style name="DialogThemeFullScreen" parent="Theme.Prestador">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>
    </style>

    <style name="principal_edit" parent="Widget.Design.TextInputLayout">
        <item name="android:background">@drawable/edit_login_bg</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:height">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/light_white</item>
        <item name="android:fontFamily">@font/hammersmith_one</item>
        <item name="errorIconTint">@color/red_warning</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="big_edit" parent="principal_edit">
        <item name="android:background">@drawable/edt_big_bg</item>
        <item name="android:minHeight">100dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="Widget.App.Slider" parent="Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Slider</item>
        <item name="labelStyle">@style/Widget.App.Tooltip</item>
    </style>

    <style name="ThemeOverlay.App.Slider" parent="">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorOnPrimary">@color/light_white</item>
        <item name="colorOnSurface">@color/grey</item>
    </style>

    <style name="Widget.App.Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="backgroundTint">@color/grey</item>
    </style>

</resources>