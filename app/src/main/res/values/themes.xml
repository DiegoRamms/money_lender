<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Prestador" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_salmon</item>
        <item name="colorPrimaryVariant">@color/light_red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorOnBackground">@color/background_light</item>
        <item name="colorTitleText">@color/black</item>
        <item name="colorSubtitleText">@color/light_salmon</item>
        <item name="colorPrincipalText">@color/black</item>
        <item name="colorPrincipalAlphaText">@color/black_alpha_80</item>
        <item name="colorDescriptionText">@color/black_description</item>

        <item name="colorGenericIcon">@color/grey</item>
        <item name="colorDivider">@color/light_grey</item>
        <item name="colorBackgroundSecondary">@color/white_background_secondary</item>



        <item name="android:windowContentTransitions">true</item>

        <item name="sliderStyle">@style/Widget.App.Slider</item>

    </style>


    <style name="DialogTheme" parent="ThemeOverlay.AppCompat.ActionBar" />
    <style name="DialogThemeAnim" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>
    </style>

    <style name="DialogThemeFullScreen" parent="Theme.Prestador">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MyAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/anim_in</item>
        <item name="android:windowExitAnimation">@anim/anim_out</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent_white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="CustomCardViewShapeStyle" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeCardView</item>
    </style>

    <style name="ShapeCardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeBottomRight">0dp</item>

    </style>

    <style name="CustomCardViewShapeStyle2" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeCardView2</item>
    </style>

    <style name="ShapeCardView2">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">28dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeTopRight">28dp</item>
        <item name="cornerSizeBottomRight">0dp</item>

    </style>

    <style name="ChipActionStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:colorBackground">@color/transparent_white</item>
        <item name="fontFamily">@font/voces</item>
    </style>


    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>
    </style>




    <style name="principal_edit" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_login_bg</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:height">50dp</item>
        <item name="minHeight">50dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:fontFamily">@font/hammersmith_one</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="big_edit" parent="principal_edit">
        <item name="android:background">@drawable/edt_big_bg</item>
        <item name="android:minHeight">100dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="menu_list" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:background">@drawable/edit_login_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:fontFamily">@font/hammersmith_one</item>
    </style>

    <style name="DialogBottomSheet" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="textItemPrimary">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="fontFamily">@font/voces</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Widget.App.Slider" parent="Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Slider</item>
        <item name="labelStyle">@style/Widget.App.Tooltip</item>
    </style>

    <style name="ThemeOverlay.App.Slider" parent="">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorOnPrimary">@color/light_white</item>
        <item name="colorOnSurface">@color/grey</item>
    </style>

    <style name="Widget.App.Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="backgroundTint">@color/grey</item>
    </style>



</resources>